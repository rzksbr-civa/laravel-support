{
    "name": "webaune/laravel-support",
    "description": "Common support helpers, contracts, and traits required by various packages. Validator functionality, and basic controller included out-of-the-box.",
    "type": "library",
    "keywords": [
        "webaune",
        "laravel",
        "contract",
        "validator",
        "timezones",
        "mimetype",
        "support",
        "helper",
        "trait"
    ],
    "license": "MIT",
    "homepage": "https://webaune.com",
    "support": {
        "email": "razeek@webaune.com",
        "issues": "https://github.com/rzksbr-civa/laravel-support/issues",
        "source": "https://github.com/rzksbr-civa/laravel-support",
        "docs": "https://github.com/rzksbr-civa/laravel-support/blob/master/README.md"
    },
    "authors": [
        {
            "name": "Webaune Solutions Pvt Ltd",
            "homepage": "https://webaune.com",
            "email": "razeek@webaune.com"
        }
    ],
    "require": {
        "php": "^8.2.0",
        "illuminate/database": "^10.0.0 || ^11.0.0",
        "illuminate/support": "^10.0.0 || ^11.0.0",
        "spatie/laravel-sluggable": "^3.6.0",
        "spatie/laravel-schemaless-attributes": "^2.5.0",
        "spatie/laravel-translatable": "^6.8.0",
        "vinkla/hashids": "^11.0.0 || ^12.0.0",
        "watson/validating": "^8.2.0"
    },
    "require-dev": {
        "codedungeon/phpunit-result-printer": "^0.32.0",
        "phpunit/phpunit": "^11.0.1"
    },
    "autoload": {
        "files": [
            "src/Support/helpers.php"
        ],
        "psr-4": {
            "Webaune\\Support\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Webaune\\Support\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Webaune\\Support\\Providers\\SupportServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
